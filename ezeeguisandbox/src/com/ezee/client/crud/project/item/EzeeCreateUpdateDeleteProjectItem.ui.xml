<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel>
		<g:VerticalPanel width="405px">
			<g:HorizontalPanel>
				<g:Label text="Item Name" styleName="gwt-Label-Small" />
				<g:TextBox styleName="gwt-TextBox-Large" ui:field="txtName" />
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label text="Contractor" styleName="gwt-Label-Small" />
				<g:ListBox styleName="gwt-ListBox-Large" ui:field="lstContractor" />
			</g:HorizontalPanel>
			<g:cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE" width="100%" height="100%">
				<g:HorizontalPanel>
					<g:Button text="Delete" ui:field="btnDelete" />
					<g:Button text="Save" ui:field="btnSave" />
					<g:Button text="Close" ui:field="btnClose" />
				</g:HorizontalPanel>
			</g:cell>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 