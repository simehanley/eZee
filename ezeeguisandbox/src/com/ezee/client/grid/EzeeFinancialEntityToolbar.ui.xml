<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:HorizontalPanel horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="300px"
		styleName="gwt-Panel-Border" height="45px">
		<g:Label text="Name" styleName="gwt-Label-Medium" />
		<g:TextBox styleName="gwt-TextBox-Medium" ui:field="txtNameText" />
		<g:Button text="Refresh" ui:field="btnRefresh" />
		<g:Button text="Clear" ui:field="btnClear" />
	</g:HorizontalPanel>

</ui:UiBinder> 