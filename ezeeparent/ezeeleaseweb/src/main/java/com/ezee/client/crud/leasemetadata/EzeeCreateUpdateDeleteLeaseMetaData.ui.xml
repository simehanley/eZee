<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with type="com.ezee.web.common.ui.css.EzeeDefaultResources" field="res" />

	<g:HTMLPanel>
		<g:VerticalPanel>
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<g:Label styleName="{res.css.gwtLabelSmall}" text="Type" />
					<g:ListBox styleName="{res.css.gwtListBoxMedium}" ui:field="lstType" />
				</g:HorizontalPanel>
			</g:VerticalPanel>
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<g:Label styleName="{res.css.gwtLabelSmall}" text="Description" />
					<g:Label styleName="{res.css.gwtLabelSmall}" text="Value" />
					<g:TextBox styleName="{res.css.gwtTextBoxMedium}" ui:field="txtValue" />
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:RichTextArea styleName="{res.css.gwtRichTextAreaMedium}" width="385px" height="80px" ui:field="txtDescription" />
				</g:HorizontalPanel>
			</g:VerticalPanel>
			<g:HorizontalPanel>
				<g:HorizontalPanel width="105px" />
				<g:HorizontalPanel>
					<g:Button styleName="{res.css.gwtButton}" text="Delete" enabled="false" ui:field="btnDelete" />
					<g:Button styleName="{res.css.gwtButton}" text="Save" ui:field="btnSave" />
					<g:Button styleName="{res.css.gwtButton}" text="Close" ui:field="btnClose" />
				</g:HorizontalPanel>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 