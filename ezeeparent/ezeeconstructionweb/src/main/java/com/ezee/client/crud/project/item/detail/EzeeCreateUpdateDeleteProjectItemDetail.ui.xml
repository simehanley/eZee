<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with type="com.ezee.web.common.ui.css.EzeeDefaultResources"
		field="res" />

	<g:HTMLPanel>
		<g:VerticalPanel>
			<g:HorizontalPanel>
				<g:Label text="Description" styleName="{res.css.gwtLabelSmall}" />
				<g:RichTextArea styleName="{res.css.gwtRichTextAreaMedium}"
					height="128px" width="289px" />
				<g:VerticalPanel>
					<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
						<g:Label text="Amount" styleName="{res.css.gwtLabelSmall}" />
						<g:TextBox styleName="{res.css.gwtTextBoxSmall}"
							ui:field="txtAmount" />
					</g:HorizontalPanel>
					<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
						<g:Label text="Tax" styleName="{res.css.gwtLabelSmall}" />
						<g:TextBox styleName="{res.css.gwtTextBoxSmall}"
							ui:field="txtTax" />
					</g:HorizontalPanel>
					<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
						<g:Label text="Total" styleName="{res.css.gwtLabelSmall}" />
						<g:TextBox styleName="{res.css.gwtTextBoxSmall}"
							ui:field="txtTotal" />
					</g:HorizontalPanel>
					<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
						<g:Label text="Type" styleName="{res.css.gwtLabelSmall}" />
						<g:ListBox styleName="{res.css.gwtListBoxSmall}"
							ui:field="lstType" />
					</g:HorizontalPanel>
				</g:VerticalPanel>
			</g:HorizontalPanel>
			<g:HorizontalPanel width="100%">
				<g:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE"
					width="50%" height="100%">
					<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
						<g:CheckBox text="Manual Tax" styleName="{res.css.gwtCheckBoxSmall}"
							ui:field="chkManualTax" />
						<g:CheckBox text="Reverse Tax" styleName="{res.css.gwtCheckBoxSmall}"
							ui:field="chkReverseTax" />
					</g:HorizontalPanel>
				</g:cell>
				<g:cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE"
					width="50%" height="100%">
					<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
						<g:Button ui:field="btnDelete" text="Delete" styleName="{res.css.gwtButton}" />
						<g:Button ui:field="btnSave" text="Save" styleName="{res.css.gwtButton}" />
						<g:Button ui:field="btnClose " text="Close" styleName="{res.css.gwtButton}" />
					</g:HorizontalPanel>
				</g:cell>
			</g:HorizontalPanel>

		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 