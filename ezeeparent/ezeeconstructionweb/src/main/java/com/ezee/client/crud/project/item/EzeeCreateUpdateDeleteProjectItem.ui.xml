<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with type="com.ezee.web.common.ui.css.EzeeDefaultResources" field="res" />

	<g:HTMLPanel>
		<g:VerticalPanel>
			<g:HorizontalPanel>
				<g:Label text="Item Name" styleName="{res.css.gwtLabelSmall}" />
				<g:TextBox styleName="{res.css.gwtTextBoxLarge}" ui:field="txtName" />
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label text="Contractor" styleName="{res.css.gwtLabelSmall}" />
				<g:ListBox styleName="{res.css.gwtListBoxLarge}" ui:field="lstContractor" />
			</g:HorizontalPanel>
			<g:cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE" width="100%" height="100%">
				<g:HorizontalPanel>
					<g:Button text="Delete" ui:field="btnDelete" styleName="{res.css.gwtButton}" />
					<g:Button text="Save" ui:field="btnSave" styleName="{res.css.gwtButton}" />
					<g:Button text="Close" ui:field="btnClose" styleName="{res.css.gwtButton}" />
				</g:HorizontalPanel>
			</g:cell>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 