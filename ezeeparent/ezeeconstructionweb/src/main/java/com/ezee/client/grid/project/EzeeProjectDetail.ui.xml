<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="com.ezee.web.common.ui.css.EzeeDefaultResources" field="res" />

	<g:HTMLPanel>
		<g:DockLayoutPanel height="32%" width="100%" unit="EM">
			<g:south size="2.8">
				<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_RIGHT" width="99.25%">
					<g:HorizontalPanel width="90%" />
					<g:HorizontalPanel width="10%">
						<g:Button text="Close" styleName="{res.css.gwtButton}" ui:field="btnCloseItem" />
						<g:Button text="Add" styleName="{res.css.gwtButton}" ui:field="btnAddItem" />
						<g:Button text="Delete" styleName="{res.css.gwtButton}" ui:field="btnDeleteItem" />
						<g:Button text="Save" styleName="{res.css.gwtButton}" ui:field="btnSaveItem" />
					</g:HorizontalPanel>
				</g:HorizontalPanel>
			</g:south>
			<g:center>
				<g:HorizontalPanel ui:field="projectItems" height="95%" width="99%" styleName="{res.css.gwtPanelBorder}" />
			</g:center>
		</g:DockLayoutPanel>
		<g:DockLayoutPanel height="32%" width="100%" unit="EM">
			<g:south size="2.8">
				<g:HorizontalPanel horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE" width="99.25%">
					<g:HorizontalPanel width="90%" />
					<g:HorizontalPanel width="10%">
						<g:Button text="Add" styleName="{res.css.gwtButton}" />
						<g:Button text="Delete" styleName="{res.css.gwtButton}" />
						<g:Button text="Save" styleName="{res.css.gwtButton}" />
					</g:HorizontalPanel>
				</g:HorizontalPanel>
			</g:south>
			<g:center>
				<g:HorizontalPanel ui:field="projectItemsDetails" height="95%" width="99%" styleName="{res.css.gwtPanelBorder}" />
			</g:center>
		</g:DockLayoutPanel>
		<g:DockLayoutPanel height="32%" width="100%" unit="EM">
			<g:south size="2.8">
				<g:HorizontalPanel horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE" width="99.25%">
					<g:HorizontalPanel width="90%" />
					<g:HorizontalPanel width="10%">
						<g:Button text="Add" styleName="{res.css.gwtButton}" />
						<g:Button text="Delete" styleName="{res.css.gwtButton}" />
						<g:Button text="Save" styleName="{res.css.gwtButton}" />
					</g:HorizontalPanel>
				</g:HorizontalPanel>
			</g:south>
			<g:center>
				<g:HorizontalPanel ui:field="projectItemsPayments" height="95%" width="99%" styleName="{res.css.gwtPanelBorder}" />
			</g:center>
		</g:DockLayoutPanel>
	</g:HTMLPanel>

</ui:UiBinder> 