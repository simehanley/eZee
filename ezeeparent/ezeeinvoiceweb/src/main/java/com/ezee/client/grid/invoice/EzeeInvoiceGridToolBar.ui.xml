<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with type="com.ezee.web.common.ui.css.EzeeDefaultResources" field="res" />

	<g:HorizontalPanel horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="1055px"
		height="45px">
		<g:Label text="Invoice Number(s)" styleName="{res.css.gwtLabelMedium}" />
		<g:TextBox styleName="{res.css.gwtTextBoxMedium}" ui:field="txtInvoiceNumber" />
		<g:Label text="Supplier" styleName="{res.css.gwtLabelMedium}" />
		<g:TextBox styleName="{res.css.gwtTextBoxMedium}" ui:field="txtSupplier" />
		<g:Label text="Premises" styleName="{res.css.gwtLabelMedium}" />
		<g:TextBox styleName="{res.css.gwtTextBoxMedium}" ui:field="txtPremises" />
		<g:Button text="Refresh" ui:field="btnRefresh" styleName="{res.css.gwtButton}" />
		<g:Button text="Clear" ui:field="btnClear" styleName="{res.css.gwtButton}" />
		<g:CheckBox text="Show Paid" width="91px" styleName="{res.css.gwtCheckBoxSmall}" ui:field="chkShowPaid"
			wordWrap="false" />
	</g:HorizontalPanel>

</ui:UiBinder> 