			<g:DockLayoutPanel unit="EM">
				<g:center>
					<g:TabLayoutPanel barHeight="20" height="100%" width="100%" ui:field="tab" />
				</g:center>
			</g:DockLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>

