<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with type="com.ezee.client.css.EzeeInvoiceDefaultResources" field="res" />

	<g:DockLayoutPanel unit="EM">
		<g:north size="5">
			<g:HorizontalPanel horizontalAlignment="ALIGN_LEFT" title="header" height="100%" width="100%"
				styleName="{res.css.header}">
				<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" width="100%" height="100%">
					<g:HTML text="eZee Invoices" styleName="{res.css.headerLabel}"></g:HTML>
				</g:cell>
			</g:HorizontalPanel>
		</g:north>
		<g:south size="3">
			<g:HorizontalPanel horizontalAlignment="ALIGN_LEFT" title="footer" height="100%" width="100%"
				styleName="{res.css.footer}">
				<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" width="100%" height="100%">
					<g:HTML text="Provided by Haich + Gee Pty Ltd" styleName="{res.css.footerLabel}"></g:HTML>
				</g:cell>
			</g:HorizontalPanel>
		</g:south>
		<g:center>
			<g:SplitLayoutPanel>
				<g:west size="150">
					<g:VerticalPanel height="100%" width="100%" styleName="{res.css.navigation}">
						<g:AbsolutePanel height="100%">
							<g:at top="10" left="10">
								<g:Label text="New Premises" width="130px" height="18px" styleName="{res.css.navigationLink}" ui:field="newpremises"/>
							</g:at>
							<g:at top="38" left="10">
								<g:Label text="New Supplier" width="130px" height="18px" styleName="{res.css.navigationLink}" ui:field="newsupplier"/>
							</g:at>
							<g:at top="69" left="10">
								<g:Label text="New Invoice" width="130px" height="18px" styleName="{res.css.navigationLink}" ui:field="newinvoice"/>
							</g:at>
						</g:AbsolutePanel>
					</g:VerticalPanel>
				</g:west>
				<g:center>
					<g:DockLayoutPanel unit="EM">
						<g:center>
							<g:TabLayoutPanel barHeight="20" height="100%" width="100%" ui:field="tab"/>
						</g:center>
					</g:DockLayoutPanel>
				</g:center>
			</g:SplitLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder> 